    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-30dp"
        app:srcCompat="@mipmap/login_bg01" />

    <EditText
        android:id="@+id/et_register_username"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/btn_register_register"
        android:layout_alignStart="@+id/btn_register_register"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_editview"
        android:fontFamily="微软雅黑"
        android:gravity="center"
        android:hint="输入手机号"
        android:inputType="phone"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/et_register_username"
        android:layout_alignStart="@+id/et_register_username"
        android:layout_below="@+id/et_register_username"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_editview"
        android:fontFamily="微软雅黑"
        android:gravity="center"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_engLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_register_username"
        android:layout_alignEnd="@+id/txt_register_isNumber"
        android:layout_alignRight="@+id/txt_register_isNumber"
        android:layout_marginBottom="44dp"
        android:text="SING IN"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_chLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_register_username"
        android:layout_alignRight="@+id/et_register_username"
        android:layout_alignTop="@+id/txt_engLog"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="登  录"
        android:textColor="@color/white"
        android:textSize="30sp" />
