    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_below="@+id/et_register_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="注  册"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_register_isNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_register_register"
        android:layout_alignStart="@+id/btn_register_register"
        android:layout_below="@+id/btn_register_register"
        android:layout_marginTop="14dp"
        android:text="已有账号？"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/et_register_goLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_register_isNumber"
        android:layout_toEndOf="@+id/txt_register_isNumber"
        android:layout_toRightOf="@+id/txt_register_isNumber"
        android:text="去登录"
        android:textColor="#4682B4"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_toLeftOf="@+id/txt_chLog"
        android:layout_toStartOf="@+id/txt_chLog"
        android:gravity="center_horizontal"
        android:text="注册即同意平台协议"
        android:textSize="12sp" />

</RelativeLayout>
