<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_register_protocol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="微软雅黑"
    tools:context="com.example.txjju.smartgenplatform_android.activity.RegisterActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-30dp"
        app:srcCompat="@mipmap/register_bg" />

    <EditText
        android:id="@+id/et_register_username"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/btn_register_register"
        android:layout_alignStart="@+id/btn_register_register"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_editview"
        android:fontFamily="微软雅黑"
        android:gravity="center"
        android:hint="输入用户名"
        android:inputType="text"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/et_register_username"
        android:layout_alignStart="@+id/et_register_username"
        android:layout_below="@+id/et_register_username"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_editview"
        android:fontFamily="微软雅黑"
        android:gravity="center"
        android:hint="输入手机号码"
        android:inputType="phone"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_register_pwd"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/et_register_phone"
        android:layout_alignStart="@+id/et_register_phone"
        android:layout_below="@+id/et_register_phone"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_editview"
        android:fontFamily="微软雅黑"
        android:gravity="center"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_engLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_chLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_engLog"
        android:layout_alignBottom="@+id/txt_engLog"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="20dp"
        android:text="注  册"
        android:textColor="@color/white"
        android:textSize="30sp" />
