<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="@color/bgLightGray"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_address_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ck_chose"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/location" />

    <LinearLayout
        android:id="@+id/tv_update_address_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_show_pic"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_update_address_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="蔡云霞"
                android:textColor="@color/c7"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_update_address_phone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="15270579059"
                android:textColor="@color/c6"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update_address_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="江西省上饶市万年县上坊乡西岗村家村"
            android:textColor="@color/c7"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="1dip"
        android:layout_height="25dp"
        android:background="@color/c5"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_update_address_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="编 辑"
        android:textSize="14dp" />
</LinearLayout>
