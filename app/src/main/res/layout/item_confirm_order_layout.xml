<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c1">
        <ImageView
            android:id="@+id/iv_confirmOrder_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/project2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_confirmOrder_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_confirmOrder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="树叶回收垃圾桶——方便实惠，你值得拥有"
                android:textColor="#000000"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_confirmOrder_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥：25.0"
                    android:textColor="#000000"
                    android:layout_marginRight="90dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_confirmOrder_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/tv_order_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计："
            android:padding="@dimen/padding_10dp"
            android:textColor="@color/default_text_color" />

        <TextView
            android:id="@+id/tv_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥25.00"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="@color/red"
            android:paddingTop="@dimen/padding_10dp" />
    </LinearLayout>
</LinearLayout>
