<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/bgLightGray"
    android:padding="7dp"
    >

    <ImageView
        android:id="@+id/iv_product_picture_confirm_order"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/project2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_title_confirm_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="树叶回收垃圾桶"
                android:textColor="#000000"
                android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="颜色分类:如图所示,尺码:均码"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/c21"
                android:text="发货时间：众智承诺30天"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    style="@style/style_c9_s14"
                    android:text="￥"/>

                <TextView
                    android:id="@+id/tv_product_price_confirm_order"
                    style="@style/style_c9_s14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128.00" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="2dp"
                    android:textSize="13sp"
                    android:text="X"/>

                <TextView
                    android:id="@+id/tv_product_buy_count_confirm_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:text="1" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="#fafafa"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-10dp"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共"/>
                <TextView
                    android:id="@+id/tv_order_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件商品"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计："
                    android:padding="@dimen/padding_10dp"
                    android:textColor="@color/default_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="right"
                    android:textColor="@color/red"
                    android:paddingTop="@dimen/padding_10dp" />

                <TextView
                    android:id="@+id/tv_item_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.00"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/red"
                    android:paddingTop="@dimen/padding_10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
