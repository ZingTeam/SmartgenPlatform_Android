<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:background="@drawable/dialog_style"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/address_dialog_picture"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@mipmap/warning_dialog"/>

        <!--<TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="温馨提示"
            android:textSize="18sp" />-->

        <TextView
            android:id="@+id/address_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_dialog_picture"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="您还没有收货地址，去添加吧！"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/address_dialog_btn_cancel"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/blue_button_background"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/address_dialog_btn_sure"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/blue_button_background"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
