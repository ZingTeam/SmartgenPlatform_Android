<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item_order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:padding="@dimen/padding_10dp"
            android:text="众智品牌" />

        <TextView
            android:id="@+id/tv_item_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10dp"
            android:textColor="@color/main_red_text"
            android:text="待评价" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white_text"
        android:id="@+id/ll_item_wait"
        android:backgroundTint="@color/c1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_item_order_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/project2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_item_order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="树叶垃圾桶——方便实惠，节能环保"
                android:textColor="@color/default_text_color" />
            <TextView
                android:id="@+id/tv_order_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:text="¥25.00"/>
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/tv_item_order_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:paddingLeft="@dimen/padding_20dp"
                    android:paddingRight="@dimen/padding_20dp"
                    android:background="@drawable/login_btn"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:text="好评"
                    android:textColor="@color/main_white_text" />
                <TextView
                    android:id="@+id/tv_item_order_comment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:paddingLeft="@dimen/padding_20dp"
                    android:paddingRight="@dimen/padding_20dp"
                    android:background="@drawable/login_btn"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:text="中评"
                    android:textColor="@color/main_white_text" />
                <TextView
                    android:id="@+id/tv_item_order_comment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:paddingLeft="@dimen/padding_20dp"
                    android:paddingRight="@dimen/padding_20dp"
                    android:background="@drawable/login_btn"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:text="差评"
                    android:textColor="@color/main_white_text" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
