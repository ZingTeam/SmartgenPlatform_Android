<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_mine_Creproject_picture"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="22dp"
        android:src="@mipmap/project"/>

    <TextView
        android:id="@+id/tv_mine_Creproject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/iv_mine_Creproject_picture"
        android:layout_toRightOf="@+id/iv_mine_Creproject_picture"
        android:text="创意指环"
        android:textColor="#555555"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_mine_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_mine_Creproject_praise"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_mine_Creproject_praise"
        android:src="@mipmap/ic_omit" />


    <ImageView
        android:id="@+id/fh_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_mine_Creproject_title"
        android:layout_alignStart="@+id/tv_mine_Creproject_title"
        android:layout_below="@+id/tv_mine_Creproject_title"
        android:src="@mipmap/ic_fh"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_mine_Creproject_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mine_Creproject_title"
        android:layout_centerHorizontal="true"
        android:text="孵化中"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/mine_dianzan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/iv_mine_Creproject_picture"
        android:layout_alignEnd="@+id/tv_mine_Creproject_praise"
        android:layout_alignRight="@+id/tv_mine_Creproject_praise"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:src="@mipmap/ic_like_normal" />

    <TextView
        android:id="@+id/tv_mine_Creproject_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mine_dianzan"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:text="88" />
</RelativeLayout>
