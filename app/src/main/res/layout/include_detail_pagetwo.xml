<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
    <TextView
        style="@style/style_c5_s14"
        android:text="商品库存" />

    <TextView
        android:id="@+id/product_detail_productCount"
        style="@style/style_c7_s14"
        android:layout_marginLeft="20dp"
        android:text="160"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            style="@style/style_c5_s14"
            android:text="商品销量" />

        <TextView
            android:id="@+id/product_detail_productSell"
            style="@style/style_c7_s14"
            android:layout_marginLeft="20dp"
            android:text="60"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            style="@style/style_c5_s14"
            android:text="商品评价" />

        <TextView
            android:id="@+id/product_detail_productBestCount"
            style="@style/style_c7_s14"
            android:layout_marginLeft="20dp"
            android:text="好评数：40"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/product_detail_productMiddleCount"
            style="@style/style_c7_s14"
            android:layout_marginLeft="85dp"
            android:text="中评数：4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/product_detail_productBadCount"
            style="@style/style_c7_s14"
            android:layout_marginLeft="85dp"
            android:text="差评数：0"
            android:paddingTop="10dp"/>
    </LinearLayout>
</LinearLayout>