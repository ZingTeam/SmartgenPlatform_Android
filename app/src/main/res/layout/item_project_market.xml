<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.txjju.smartgenplatform_android.activity.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="微软雅黑"
    android:layout_marginTop="3dp"
    android:padding="4dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_project_picture_market"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_project_title_market"
            style="@style/style_c7_s18"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="微软雅黑"
            android:text="创意指环" />

        <TextView
            android:id="@+id/tv_project_abstract_market"
            style="@style/style_c5_s14"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="微软雅黑"
            android:text="不一样的创意指环，让生活更优雅" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                style="@style/style_c7_s14"
                android:text="200"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                style="@style/style_c6_s14"
                android:text="+人喜欢"/>

            <ImageView
                android:id="@+id/iv_project_statepicture_market"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/ic_fh" />

            <TextView
                android:id="@+id/tv_project_state_market"
                style="@style/style_c6_s16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:text="孵化中" />
    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_project_details_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_omit" />
         />
</LinearLayout>

