<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.txjju.smartgenplatform_android.activity.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="微软雅黑"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp"
    android:padding="4dp"
    android:id="@+id/ll_all_store"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_product_picture_store"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sell_state_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/red_radius"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="预售"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_product_title_store"
                    style="@style/style_c7_s16"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="微软雅黑"
                    android:text="未来黑板——玩转科技就是现在" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_stateview"
            android:textSize="10sp"
            android:textColor="@color/c21"
            android:text="包  邮"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_yuan"
                style="@style/style_c9_s18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥" />

            <TextView
                android:id="@+id/tv_product_price_store"
                style="@style/style_c9_s18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50" />

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_class_star1_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_star" />

            <ImageView
                android:id="@+id/iv_class_star2_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_star" />

            <ImageView
                android:id="@+id/iv_class_star3_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_star" />

            <ImageView
                android:id="@+id/iv_class_star4_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_star" />

            <ImageView
                android:id="@+id/iv_class_star5_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_star" />

            <TextView
                android:id="@+id/tv_product_grade_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="尚无评价" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>

